<div data-controller="category">
  <div class="media align-items-center mb-headings">

    <div class="media-body">
      <% if controller.action_name == "new" %>
        <h1 class="h2">New entry</h1>
      <% elsif controller.action_name == "edit" %>
        <h1 class="h2">Edit entry</h1>
      <% end %>
    </div>

    <%= form_with(model: entry) do |form| %>
      <div class="media-right">
        <input class="btn btn-success" type="submit" name="commit" value="SAVE"
        <% if controller.action_name == "new" %>
           disabled data-category-target="submit"
        <% end %>
        />
      </div>
  </div>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Basic Information</h4>
        </div>
        <div class="card-body">
          <div class="form-group">
            <%= form.label :category, t('category'), class: "form-label" %>
            <%= form.select :category,
              @category,
              { prompt: 'Select a Category'},
              { class: 'form-control', required: true,
                data: { action: "change->category#category_select", category_target: "select" }
            }
          %>
        </div>

        <div class="form-group">
          <%= form.label :heading, t('heading'), class: "form-label" %>
          <%= form.text_field :heading, required: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :entry_images, t('entry_images') + ' (max 4 images, 4100px size)', class: "form-label" %>
          <%= form.file_field :entry_images, multiple: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :body, t('body'), class: "form-label" %>
          <%= form.text_area :body, class: "form-control", style: "height: 150px;" %>
        </div>

        <div class="form-group">
          <%= form.label :maker, t('maker'), class: "form-label" %>
          <%= form.text_field :maker, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :model, t('model'), class: "form-label" %>
          <%= form.text_field :model, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :geartype, t('geartype'), class: "form-label" %>
          <%= form.text_field :geartype, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :year, t('year'), class: "form-label" %>
          <%= form.text_field :year, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :serial, t('serial'), class: "form-label" %>
          <%= form.text_field :serial, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :madein, t('madein'), class: "form-label" %>
          <%= form.text_field :madein, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :sound, t('sound'), class: "form-label" %>
          <%= form.text_area :sound, class: "form-control", style: "height: 150px;"  %>
        </div>

        <div hidden data-category-target="guitarform">

          <div class="form-group">
            <%= form.label :guitarbody, t('guitarbody'), class: "form-label" %>
            <%= form.text_field :guitarbody, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :neck, t('neck'), class: "form-label" %>
            <%= form.text_field :neck, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :fboard, t('fboard'), class: "form-label" %>
            <%= form.text_field :fboard, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :peg, t('peg'), class: "form-label" %>
            <%= form.text_field :peg, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :fret, t('fret'), class: "form-label" %>
            <%= form.text_field :fret, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :scale, t('scale'), class: "form-label" %>
            <%= form.text_field :scale, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :pickup, t('pickup'), class: "form-label" %>
            <%= form.text_field :pickup, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :bridge, t('bridge'), class: "form-label" %>
            <%= form.text_field :bridge, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :finish, t('finish'), class: "form-label" %>
            <%= form.text_field :finish, class: "form-control" %>
          </div>

        </div>

        <div class="form-group">
          <%= form.label :controlls, t('controlls'), class: "form-label" %>
          <%= form.text_field :controlls, class: "form-control" %>
        </div> 

        <div class="form-group">
          <%= form.label :price, t('price'), class: "form-label" %>
          <%= form.text_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :weight, t('weight'), class: "form-label" %>
          <%= form.text_field :weight, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :vote_weight, t('vote_weight'), class: "form-label" %>
          <%= form.text_field :vote_weight, class: "form-control" %>
        </div>

        <div class="actions">
          <input  class="btn btn-success" type="submit" name="commit" value="SAVE"
          <% if controller.action_name == "new" %>
            disabled data-category-target="submit"
          <% end %>
          />
        </div>
      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
