<% content_for :title do %><%= "Change your password" %><% end %>
<body class="login">
  <div class="d-flex align-items-center" style="min-height: 100vh">
    <div class="col-sm-8 col-md-6 col-lg-4 mx-auto" style="min-width: 300px;">
      <div class="text-center mt-5 mb-1">
        <div class="avatar avatar-lg">
          <img src=<%= asset_pack_path("media/images/primary.svg") %> class="avatar-img" alt="Logo" />
        </div>
      </div>
      <div class="d-flex justify-content-center mb-5 navbar-light">
        <a href="/" class="navbar-brand m-0">GCV</a>
      </div>
      <div class="card navbar-shadow">
        <div class="card-header text-center">
          <h4>Change your password</h4>
        </div>
      </div>

      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <% resource.errors.full_messages.each do |message| %>
          <b><%= message %></b>
        <% end %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, "New password", class: "form-label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="input-group input-group-merge">
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "New password", class: "form-control form-control-prepended" %>
              <div class="input-group-prepend">
                <div class="input-group-text">
                  <span class="far fa-key"></span>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
            <div class="input-group input-group-merge">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmation", class: "form-control form-control-prepended" %>
              <div class="input-group-prepend">
                <div class="input-group-text">
                  <span class="far fa-key"></span>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group ">
            <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>

      </div>
    </div>
</body>
