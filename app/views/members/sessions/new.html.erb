<% content_for :title do %><%= "Login" %><% end %>
<body class="login">	

  <div class="d-flex align-items-center" style="min-height: 100vh">
    <div class="col-sm-8 col-md-6 col-lg-4 mx-auto" style="min-width: 300px;">
      <div class="text-center mt-5 mb-1">
        <div class="avatar avatar-lg">
          <img src=<%= asset_pack_path("media/images/primary.svg") %> class="avatar-img" alt="Logo" />
        </div>
      </div>
      <div class="d-flex justify-content-center mb-5 navbar-light">
        <a href="/" class="navbar-brand m-0">GCV</a>
      </div>
      <div class="card navbar-shadow">
        <div class="card-header text-center">
          <h4 class="card-title">Login</h4>
          <p class="card-subtitle">Access your account</p>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <% resource.errors.full_messages.each do |message| %>
            <b><%= message %></b>
          <% end %>
            <div class="form-group">
              <label class="form-label" for="member_email">Your email address:Email</label>
              <div class="input-group input-group-merge">
                <input autocomplete="email" class="form-control form-control-prepended" autofocus="autofocus" type="email" value="" name="member[email]" id="member_email"  placeholder="Your email address" />
                <div class="input-group-prepend">
                  <div class="input-group-text">
                    <span class="far fa-envelope"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="form-label" for="member_password">Your password:</label>
              <div class="input-group input-group-merge">
                <input autocomplete="current-password" class="form-control form-control-prepended" type="password" name="member[password]" id="member_password"  placeholder="Your password" />
                <div class="input-group-prepend">
                  <div class="input-group-text">
                    <span class="far fa-key"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group form-check">
              <input value="0" type="hidden" name="member[remember_me]" />
              <label  class="form-label" for="member_remember_me">
                <input class="form-check-input" type="checkbox" value="1" name="member[remember_me]" id="member_remember_me" /><span class="ml-3">Remember me</span>
              </label>
            </div>
            <div class="form-group ">
              <p><%= flash[:recaptcha_error] %></p>
              <%= recaptcha_v3(action: "login") %>
            </div>

            <div class="form-group ">
              <input type="submit" name="commit" value="Login" class="btn btn-primary btn-block" data-disable-with="Log in" />
            </div>
            <div class="text-center">
              <a href="/members/password/new" class="text-black-70">Forgot your password?</a><br />
            </div>
          <% end %>

        </div>

        <div class="card-footer text-center text-black-50">
          Not yet a member? <a href="/members/sign_up">Sign up</a>
        </div>
      </div>
    </div>
  </div>

</body>
